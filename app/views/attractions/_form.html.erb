<div>
	<%= form_for attraction do |f| %>
		<div>
			<%= f.label :name%><br>
			<%= f.text_field :name %>
		</div>
		<div>
			<%= f.label 'Height Requirement (in inches)' %><br>
			<%= f.number_field :min_height %>
		</div>
		<div>
			<%= f.label "How fun it it? (1-5 scale)" %><br>
			<%= f.number_field :happiness_rating %>
		</div>
		<div>
			<%= f.label "How nauseous-inducing is it? (1-5 scale)" %><br>
			<%= f.number_field :nausea_rating %>
		</div>
		<div>
			<%= f.label "How many tickets does it cost?" %><br>
			<%= f.number_field :tickets %>
		</div>
		

		<p>
			<%= f.submit %>
			

	<% end %>
</div>